{
  "compilerOptions":{
  "target":"ES2017",
  "module":"commonjs",
  "lib":["ES6"],
  "allowJs":true,
  "outDir":"./dist",
  "rootDir":"./src",
  "removeComments":true,
  "strict":true,
  "typeRoots":[
  "./node_modules/@types",
  "./src/@types"
  ],
  "esModuleInterop":true,
  "experimentalDecorators":true,
  "emitDecoratorMetadata":true,
  "skipLibCheck":true,
  "forceConsistentCasingInFileNames":true,
  "strictPropertyInitialization": false,
  "baseUrl": "./src",
  "paths": {
    "@modules/*":["modules/*"],
    "@config/*":["config/*"],
    "@shared/*":["shared/*"]
  },
},
"include": [
  "src/**/*"
]
}
